# Reading App Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to the repository

# Password for admin access (required)
READING_APP_PASSWORD=your-secure-password-here

# Path to SQLite database file (optional)
# Default: ../books.db (relative to backend/)
# Production (Railway): /data/books.db (must have persistent volume mounted at /data)
# DATABASE_PATH=/data/books.db

# Comma-separated list of allowed CORS origins (optional)
# Default: http://localhost:3000
# Production example: http://localhost:3000,https://reading-app-production-5700.up.railway.app
ALLOWED_ORIGINS=http://localhost:3000
